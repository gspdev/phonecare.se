<script type="text/javascript">
    jQuery(document).ready(function($){

        //save register option at sessionStorage
        $(".register_link a").click(function(){
            if($(this).hasClass("consumer")){
                localStorage.register="0";
            }else if($(this).hasClass("business")){
                localStorage.register="1";
            }
        });

    });
</script>